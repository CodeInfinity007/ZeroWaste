<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroWaste" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/archivo_narrow_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonTheme" parent="android:Widget.Button">
        <item name="colorPrimary">#FFDE7A</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Theme.ZeroWaste.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZeroWaste.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.ZeroWaste.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
